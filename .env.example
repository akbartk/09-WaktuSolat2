# Waktu Solat Production Environment Variables
# Copy this file to .env and fill in your actual values

# Konfigurasi Port
HTTP_PORT=3030
# HTTPS_PORT=443 (dinonaktifkan)
PROD_PORT=3005

# Timezone
TZ=Asia/Jakarta

# API Keys dan Endpoints - PRODUCTION SECURE
VITE_API_ALADHAN=https://api.aladhan.com/v1
VITE_API_MYQURAN=https://api.myquran.com/v2
VITE_API_IPGEOLOCATION=https://api.ipgeolocation.io/ipgeo

# Production API Keys (Replace with actual values)
REACT_APP_TIMEZONE_DB_KEY=your_timezone_db_api_key_here
REACT_APP_GEONAMES_USERNAME=your_geonames_username_here

# API Timeouts (in milliseconds)
REACT_APP_GPS_TIMEOUT=15000
REACT_APP_API_TIMEOUT=10000

# Default Location (Jakarta coordinates)
REACT_APP_DEFAULT_LATITUDE=-6.2088
REACT_APP_DEFAULT_LONGITUDE=106.8456
REACT_APP_DEFAULT_LOCATION_NAME=Jakarta, Indonesia
REACT_APP_DEFAULT_TIMEZONE=Asia/Jakarta

# Domain
DOMAIN=akbartk.info

# Application Settings
REACT_APP_VERSION=2.0.0
REACT_APP_ENVIRONMENT=production
